<h1><%= @post.title %></h1>

<div class="tile">
  <%= link_to image_tag(@post.image.url(:medium)), @post %>
	<div class="content">
	  <%= @post.body %>
	</div>
	<div class="footer">
		<%= link_to image_tag(@post.user.avatar.url(:tiny)), @post.user %>
		<%= link_to @post.user.name, @post.user %>
	</div>
</div>